/* 偏好设置页面样式 */

page {
  background: #F8F9FD;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 顶部导航栏 */
.navbar {
  width: 393px;
  height: 57px;
  background: white;
  border-bottom: 1px #F3F4F6 solid;
  position: fixed;
  top: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 14px;
}

.navbar-title {
  display: flex;
  align-items: center;
  gap: 35px;
}

.navbar-back {
  width: 24.50px;
  height: 24.50px;
  border-radius: 10.50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F9FAFB;
}

.navbar-text {
  color: #1A1D2E;
  font-size: 15.75px;
  font-weight: 400;
}

.navbar-actions {
  display: flex;
  gap: 7px;
}

.navbar-action {
  width: 31.50px;
  height: 31.50px;
  border-radius: 10.50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F9FAFB;
}

/* 主内容区域 */
.content {
  padding: 21px 14px;
  margin-top: 57px;
}

/* 设置区块 */
.settings-section {
  width: 364px;
  margin-bottom: 21px;
}

.section-title {
  width: 364px;
  height: 24.50px;
  margin-bottom: 14px;
  color: #1A1D2E;
  font-size: 15.75px;
  font-weight: 400;
}

/* 设置项 */
.setting-item {
  margin-bottom: 14.50px;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-header {
  width: 364px;
  height: 21px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 7px;
}

.setting-label {
  color: #1A1D2E;
  font-size: 14px;
  font-weight: 400;
}

.setting-description {
  width: 364px;
  height: 35px;
  color: #6A7282;
  font-size: 12.25px;
  font-weight: 400;
  line-height: 1.4;
}

.setting-description-with-link {
  position: relative;
}

.setting-link {
  position: absolute;
  left: 28px;
  top: 17.50px;
  width: 84.63px;
  height: 17.50px;
  color: #2B7FFF;
  font-size: 12.25px;
  font-weight: 400;
}

/* 分割线 */
.divider {
  width: 364px;
  height: 1px;
  background: #E5E7EB;
  margin-bottom: 21px;
}

/* 选择项 */
.select-item {
  width: 364px;
  height: 45.50px;
  background: #F9FAFB;
  border-radius: 10.50px;
  margin-bottom: 10.50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 14px;
}

.select-item:last-child {
  margin-bottom: 0;
}

.select-label {
  color: #1A1D2E;
  font-size: 14px;
  font-weight: 400;
}

.select-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.select-text {
  color: #6A7282;
  font-size: 12.25px;
  font-weight: 400;
}

.select-arrow {
  width: 14px;
  height: 14px;
  transition: transform 0.3s ease;
}

/* 水印设置 */
.watermark-section {
  width: 364px;
  margin-bottom: 40px;
}

.watermark-header {
  width: 364px;
  height: 24.50px;
  margin-bottom: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.watermark-title {
  color: #1A1D2E;
  font-size: 15.75px;
  font-weight: 400;
}

.watermark-style-link {
  width: 84.63px;
  height: 17.50px;
  color: #2B7FFF;
  font-size: 12.25px;
  font-weight: 400;
}

.watermark-item {
  position: relative;
}

.example-link {
  width: 35.63px;
  height: 17.50px;
  margin-left: 7px;
  color: #99A1AF;
  font-size: 12.25px;
  font-weight: 400;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 响应式适配 */
@media (max-width: 414px) {
  page {
    width: 100vw;
  }
  
  .navbar {
    width: 100vw;
    box-sizing: border-box;
  }
  
  .content {
    width: calc(100vw - 28px);
    box-sizing: border-box;
  }
  
  .settings-section,
  .section-title,
  .setting-header,
  .setting-description,
  .divider,
  .select-item {
    width: 100%;
    box-sizing: border-box;
  }
  
  .watermark-section,
  .watermark-header {
    width: 100%;
    box-sizing: border-box;
  }
}

/* 滚动视图优化 */
scroll-view {
  height: calc(100vh - 57px);
}

/* 防止内容被导航栏遮挡 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

/* 动画效果 */
.setting-item {
  transition: background-color 0.2s ease;
}

.setting-item:active {
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: 8px;
}

.select-item {
  transition: all 0.2s ease;
}

.select-item:active {
  background-color: #F3F4F6;
  transform: scale(0.98);
}

.setting-link,
.watermark-style-link,
.example-link {
  transition: opacity 0.2s ease;
}

.setting-link:active,
.watermark-style-link:active,
.example-link:active {
  opacity: 0.7;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #6A7282;
  font-size: 14px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #6A7282;
  font-size: 14px;
}

.empty-icon {
  width: 48px;
  height: 48px;
  margin-bottom: 12px;
  opacity: 0.5;
}