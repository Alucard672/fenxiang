<!-- 图标库演示页面 -->
<view class="container">
  <view class="header">
    <text class="title">TDesign 图标库演示</text>
  </view>
  
  <view class="section">
    <text class="section-title">基础图标</text>
    <view class="icon-grid">
      <view class="icon-item">
        <t-icon name="home" size="32" color="#0052d9"></t-icon>
        <text class="icon-name">home</text>
      </view>
      <view class="icon-item">
        <t-icon name="user" size="32" color="#0052d9"></t-icon>
        <text class="icon-name">user</text>
      </view>
      <view class="icon-item">
        <t-icon name="search" size="32" color="#0052d9"></t-icon>
        <text class="icon-name">search</text>
      </view>
      <view class="icon-item">
        <t-icon name="setting" size="32" color="#0052d9"></t-icon>
        <text class="icon-name">setting</text>
      </view>
    </view>
  </view>
  
  <view class="section">
    <text class="section-title">操作图标</text>
    <view class="icon-grid">
      <view class="icon-item">
        <t-icon name="add" size="32" color="#00a870"></t-icon>
        <text class="icon-name">add</text>
      </view>
      <view class="icon-item">
        <t-icon name="edit" size="32" color="#00a870"></t-icon>
        <text class="icon-name">edit</text>
      </view>
      <view class="icon-item">
        <t-icon name="delete" size="32" color="#e34d59"></t-icon>
        <text class="icon-name">delete</text>
      </view>
      <view class="icon-item">
        <t-icon name="download" size="32" color="#00a870"></t-icon>
        <text class="icon-name">download</text>
      </view>
    </view>
  </view>
  
  <view class="section">
    <text class="section-title">状态图标</text>
    <view class="icon-grid">
      <view class="icon-item">
        <t-icon name="check" size="32" color="#00a870"></t-icon>
        <text class="icon-name">check</text>
      </view>
      <view class="icon-item">
        <t-icon name="close" size="32" color="#e34d59"></t-icon>
        <text class="icon-name">close</text>
      </view>
      <view class="icon-item">
        <t-icon name="warning" size="32" color="#ed7b2f"></t-icon>
        <text class="icon-name">warning</text>
      </view>
      <view class="icon-item">
        <t-icon name="info" size="32" color="#0052d9"></t-icon>
        <text class="icon-name">info</text>
      </view>
    </view>
  </view>
  
  <view class="section">
    <text class="section-title">不同尺寸</text>
    <view class="size-demo">
      <t-icon name="star" size="24" color="#ffb400"></t-icon>
      <t-icon name="star" size="32" color="#ffb400"></t-icon>
      <t-icon name="star" size="48" color="#ffb400"></t-icon>
      <t-icon name="star" size="64" color="#ffb400"></t-icon>
    </view>
  </view>
</view>