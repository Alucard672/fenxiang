/* 1:1像素级还原 - 所有样式已在WXML中内联 */

/* 引入个人资料侧边栏样式 */
@import "./profile.wxss";

/* 头像容器样式 */
.avatar-container {
  width: 50px !important;
  height: 50px !important;
  left: -7.5px !important;
  top: -7.5px !important;
  position: absolute !important;
  z-index: 999 !important;
  cursor: pointer;
  background: rgba(255, 0, 0, 0.1) !important;
  border-radius: 50% !important;
  pointer-events: auto !important;
}

/* 基础重置 - page样式已移除，避免与profile页面冲突 */

view, text, image {
  box-sizing: border-box;
}

/* 确保页面按Figma尺寸显示 */
.page {
  width: 393px !important;
  height: 865px !important;
  overflow: hidden !important;
}

/* 作品卡片底部内容 */
.card-footer {
  position: absolute;
  left: 10.5px;
  top: 246.83px;
  width: 156.25px;
  height: 43px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-footer__row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-footer__title {
  color: #1a1d2e;
  font-size: 12.25px;
  font-family: Inter;
  font-weight: 500;
  max-width: 120px;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-more {
  width: 25px;
  height: 25px;
  border-radius: 12.5px;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-more__icon {
  width: 14px;
  height: 14px;
}

.card-tags {
  display: flex;
  align-items: center;
}

.card-tag {
  min-width: 44px;
  height: 18.5px;
  padding: 0 8px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.1), 0px 1px 3px rgba(0, 0, 0, 0.1);
  margin-right: 8px;
}

.card-tag text {
  font-size: 10px;
  font-family: Inter;
  font-weight: 500;
  letter-spacing: 0.12px;
}

.card-tag--more {
  background: rgba(0, 0, 0, 0.08);
}

.card-tag--more text {
  color: #666666;
}

.card-tag:last-child {
  margin-right: 0;
}

/* 底部编辑弹层 */
.edit-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.edit-modal__mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.2s ease-out;
}

.edit-modal__panel {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #f8f9fd;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 24px 24px 34px;
  box-shadow: 0px -4px 12px rgba(15, 23, 42, 0.12);
  animation: slideUp 0.25s ease-out;
}

.edit-modal__handle {
  width: 78px;
  height: 6px;
  border-radius: 999px;
  background: #e5e7eb;
  margin: 0 auto 16px;
}

.edit-modal__title {
  color: #1a1d2e;
  font-size: 16px;
  font-family: Inter;
  font-weight: 600;
  text-align: center;
}

.edit-modal__subtitle {
  margin-top: 4px;
  color: #6a7282;
  font-size: 12px;
  text-align: center;
}

.edit-modal__list {
  margin-top: 20px;
}

.edit-modal__item {
  display: flex;
  align-items: center;
  padding: 12px 10px;
  border-radius: 12px;
  background: white;
  box-shadow: 0px 1px 2px rgba(15, 23, 42, 0.04);
  margin-bottom: 12px;
}

.edit-modal__item:active {
  background: #f1f3f9;
}

.edit-modal__icon {
  width: 20px;
  height: 20px;
  margin-right: 12px;
}

.edit-modal__text {
  color: #1a1d2e;
  font-size: 14px;
  font-family: Inter;
}

.edit-modal__divider {
  width: 100%;
  height: 1px;
  background: #e5e7eb;
  margin: 20px 0 12px;
}

.edit-modal__list .edit-modal__item:last-child {
  margin-bottom: 0;
}

.edit-modal__item--danger {
  background: #fff1f2;
  border: 1px solid rgba(231, 0, 11, 0.1);
}

.edit-modal__item--danger:active {
  background: #ffe4e6;
}

.edit-modal__text--danger {
  color: #e7000b;
}

.edit-modal__cancel {
  margin-top: 16px;
  width: 100%;
  height: 44px;
  border-radius: 12px;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1a1d2e;
  font-size: 14px;
  font-family: Inter;
  box-shadow: 0px 1px 3px rgba(15, 23, 42, 0.08);
}

.edit-modal__cancel:active {
  background: #f1f3f9;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}