            <text style="color: #101828; font-size: 14px; font-family: Inter; font-weight: 400">分享作品</text>
          </view>
        </view>
        
        <!-- 复制作品 -->
        <view class="menu-item" style="width: 393px; height: 45.50px; left: 0px; top: 280px; position: absolute" bindtap="copyWork">
          <image src="/assets/images/16.svg" style="left: 14px; top: 14px; position: absolute; width: 14px; height: 14px" />
          <view style="width: 56px; height: 21px; left: 42px; top: 12.25px; position: absolute">
            <text style="color: #101828; font-size: 14px; font-family: Inter; font-weight: 400">复制作品</text>
          </view>
        </view>
        
        <!-- 分隔线 -->
        <view style="width: 393px; height: 7px; left: 0px; top: 325.50px; position: absolute; background: #F3F4F6"></view>
        
        <!-- 删除作品 -->
        <view class="menu-item danger" style="width: 393px; height: 45.50px; left: 0px; top: 332.50px; position: absolute" bindtap="deleteWork">
          <image src="/assets/images/17.svg" style="left: 14px; top: 14px; position: absolute; width: 14px; height: 14px" />
          <view style="width: 56px; height: 21px; left: 42px; top: 12.25px; position: absolute">
