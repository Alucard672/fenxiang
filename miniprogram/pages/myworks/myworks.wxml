      <!-- 取消按钮 -->
      <view class="cancel-btn" style="width: 365px; height: 31.50px; left: 14px; bottom: 14px; position: absolute; background: #F8F9FD; border-radius: 8.50px; outline: 1px #E5E7EB solid; outline-offset: -1px" bindtap="hideEditModal">
        <text style="left: 170.25px; top: 7.50px; position: absolute; color: #1A1D2E; font-size: 12.25px; font-family: Inter; font-weight: 500">取消</text>
