<view style="width: 393px; height: 852px; left: 0px; top: 0px; position: absolute; background: #F8F9FD">
  

  <!-- 主要内容区域 -->
  <view style="width: 393px; height: 590.75px; left: 0px; top: 0px; position: absolute; background: #F9FAFB">
    
    <!-- 添加图片区域 -->
    <view style="width: 177.25px; height: 177.25px; left: 14px; top: 14px; position: absolute; background: white; box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10),0px 1px 3px rgba(0, 0, 0, 0.10); border-radius: 14px; outline: 2px #D1D5DC solid; outline-offset: -2px" bindtap="addImage">
      <view style="width: 42px; height: 49px; left: 67.63px; top: 64.13px; position: absolute">
        <view style="width: 42px; height: 31.50px; left: 0px; top: 0px; position: absolute">
          <view style="width: 42px; left: 0px; top: 0px; position: absolute; text-align: center">
            <text style="color: #99A1AF; font-size: 26.25px; font-weight: 400; letter-spacing: 0.24px">+</text>
          </view>
        </view>
        <view style="width: 42px; height: 14px; left: 0px; top: 35px; position: absolute">
          <view style="left: 0px; top: 0px; position: absolute; text-align: center">
