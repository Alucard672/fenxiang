          </view>
        </view>
      </view>
    </view>
    
    <!-- 创作者信息 -->
    <view style="width: 365px; height: 63px; left: 14px; top: 205.25px; position: absolute; background: white; box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10),0px 1px 3px rgba(0, 0, 0, 0.10); border-radius: 14px">
      <view style="width: 337px; height: 35px; left: 14px; top: 14px; position: absolute">
        
        <!-- 创作者信息文本 -->
        <view style="width: 291.50px; height: 31.50px; left: 60.50px; top: 1.75px; position: absolute">
          <view style="width: 291.50px; height: 17.50px; left: 0px; top: 0px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <text style="color: #1A1D2E; font-size: 12.25px; font-weight: 500">云作品小萌新</text>
            </view>
          </view>
          <view style="width: 291.50px; height: 14px; left: 0px; top: 17.50px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0px; position: absolute">
              <text style="color: #6A7282; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">创作者</text>
            </view>
          </view>
        </view>
        
        <!-- 创作者头像 -->
        <view style="width: 50px; height: 50px; left: 0px; top: -7.50px; position: absolute; overflow: hidden; border-radius: 16777200px">
          <image src="/assets/images/3.svg" style="width: 100%; height: 100%; object-fit: cover;" />
        </view>
        
      </view>
    </view>
    
    <!-- 作品简介 -->
    <view style="width: 365px; height: 280.50px; left: 14px; top: 282.25px; position: absolute; background: white; box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10),0px 1px 3px rgba(0, 0, 0, 0.10); overflow: hidden; border-radius: 14px">
      
      <!-- 标题栏 -->
      <view style="width: 337px; height: 17.50px; left: 14px; top: 14px; position: absolute">
        <view style="width: 49px; height: 17.50px; left: 0px; top: 0px; position: absolute">
          <view style="left: 0px; top: 0.50px; position: absolute">
            <text style="color: #1A1D2E; font-size: 12.25px; font-weight: 500">作品简介</text>
          </view>
        </view>
        <view wx:if="{{!workDetail.isNew}}" style="width: 30.76px; height: 14px; left: 306.24px; top: 1.75px; position: absolute" bindtap="editIntro">
          <view style="left: 0px; top: 0px; position: absolute">
            <text style="color: #6A7282; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">编辑&nbsp;></text>
          </view>
        </view>
      </view>
      
      <!-- 详细信息 -->
      <view style="width: 337px; height: 221px; left: 14px; top: 45.50px; position: absolute">
        
        <!-- 客户信息 -->
        <view style="width: 337px; height: 36px; left: 0px; top: 0px; position: absolute; border-bottom: 1px #F3F4F6 solid">
          <view style="width: 49px; height: 21px; left: 0px; top: 7px; position: absolute; background: linear-gradient(135deg, #FED7AA 0%, #FDBA74 100%); border-radius: 16777200px; display: flex; align-items: center; justify-content: center">
            <view data-svg-wrapper style="position: absolute; left: 7px; top: 50%; transform: translateY(-50%);">
              <image src="/assets/images/4.svg" style="width: 8px; height: 8px;" />
            </view>
            <view style="position: absolute; left: 21px; top: 50%; transform: translateY(-50%);">
              <text style="color: #92400E; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">客户</text>
            </view>
          </view>
          <view style="width: 277.50px; height: 17.50px; left: 59.50px; top: 8.75px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <input style="color: #364153; font-size: 12.25px; font-weight: 400; border: 1px solid #E5E7EB; border-radius: 4px; padding: 2px 6px; width: 100%;" placeholder="待点添加" bindinput="onRemarkInput" value="{{workDetail.remark}}" />
            </view>
          </view>
        </view>
        
        <!-- 行业信息 -->
        <view style="width: 337px; height: 36px; left: 0px; top: 46.50px; position: absolute; border-bottom: 1px #F3F4F6 solid">
          <view style="width: 49px; height: 21px; left: 0px; top: 7px; position: absolute; background: linear-gradient(135deg, #A7F3D0 0%, #6EE7B7 100%); border-radius: 16777200px; display: flex; align-items: center; justify-content: center">
            <view data-svg-wrapper style="position: absolute; left: 7px; top: 50%; transform: translateY(-50%);">
              <image src="/assets/images/5.svg" style="width: 8px; height: 8px;" />
            </view>
            <view style="position: absolute; left: 21px; top: 50%; transform: translateY(-50%);">
              <text style="color: #065F46; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">行业</text>
            </view>
          </view>
          <view style="width: 277.50px; height: 17.50px; left: 59.50px; top: 8.75px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <input style="color: #364153; font-size: 12.25px; font-weight: 400; border: 1px solid #E5E7EB; border-radius: 4px; padding: 2px 6px; width: 100%;" placeholder="待点添加" bindinput="onIndustryInput" value="{{workDetail.industry}}" />
            </view>
          </view>
        </view>
        
        <!-- 金额信息 -->
        <view style="width: 337px; height: 36px; left: 0px; top: 93px; position: absolute; border-bottom: 1px #F3F4F6 solid">
          <view style="width: 49px; height: 21px; left: 0px; top: 7px; position: absolute; background: linear-gradient(135deg, #FDE68A 0%, #FCD34D 100%); border-radius: 16777200px; display: flex; align-items: center; justify-content: center">
            <view data-svg-wrapper style="position: absolute; left: 7px; top: 50%; transform: translateY(-50%);">
              <image src="/assets/images/6.svg" style="width: 8px; height: 8px;" />
            </view>
            <view style="position: absolute; left: 21px; top: 50%; transform: translateY(-50%);">
              <text style="color: #78350F; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">金额</text>
            </view>
          </view>
          <view style="width: 277.50px; height: 17.50px; left: 59.50px; top: 8.75px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <input style="color: #364153; font-size: 12.25px; font-weight: 400; border: 1px solid #E5E7EB; border-radius: 4px; padding: 2px 6px; width: 100%;" placeholder="待点添加" bindinput="onAmountInput" value="{{workDetail.amount}}" />
            </view>
          </view>
        </view>
        
        <!-- 描述信息 -->
        <view style="width: 337px; height: 36px; left: 0px; top: 139.50px; position: absolute; border-bottom: 1px #F3F4F6 solid">
          <view style="width: 49px; height: 21px; left: 0px; top: 7px; position: absolute; background: linear-gradient(135deg, #DDD6FE 0%, #C4B5FD 100%); border-radius: 16777200px; display: flex; align-items: center; justify-content: center">
            <view data-svg-wrapper style="position: absolute; left: 7px; top: 50%; transform: translateY(-50%);">
              <image src="/assets/images/7.svg" style="width: 8px; height: 8px;" />
            </view>
            <view style="position: absolute; left: 21px; top: 50%; transform: translateY(-50%);">
              <text style="color: #5B21B6; font-size: 10.50px; font-weight: 400; letter-spacing: 0.09px">描述</text>
            </view>
          </view>
          <view style="width: 277.50px; height: 17.50px; left: 59.50px; top: 8.75px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <input style="color: #364153; font-size: 12.25px; font-weight: 400; border: 1px solid #E5E7EB; border-radius: 4px; padding: 2px 6px; width: 100%;" placeholder="待点添加" bindinput="onDescriptionInput" value="{{workDetail.description}}" />
            </view>
          </view>
        </view>
        
        <!-- 备注信息 -->
        <view style="width: 337px; height: 35px; left: 0px; top: 186px; position: absolute">
          <view style="width: 49px; height: 21px; left: 0px; top: 7px; position: absolute; background: linear-gradient(135deg, #BFDBFE 0%, #93C5FD 100%); border-radius: 16777200px; display: flex; align-items: center; justify-content: center">
            <view data-svg-wrapper style="position: absolute; left: 7px; top: 50%; transform: translateY(-50%);">
              <image src="/assets/images/8.svg" style="width: 8px; height: 8px;" />
