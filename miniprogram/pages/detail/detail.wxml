            </view>
          </view>
          <view style="width: 277.50px; height: 17.50px; left: 59.50px; top: 8.75px; position: absolute; display: flex; align-items: center">
            <view style="left: 0px; top: 0.50px; position: absolute">
              <input style="color: #364153; font-size: 12.25px; font-weight: 400; border: 1px solid #E5E7EB; border-radius: 4px; padding: 2px 6px; width: 100%;" placeholder="待点添加" bindinput="onRemarkInput" value="{{workDetail.remark}}" />
            </view>
          </view>
        </view>
        
      </view>
    </view>
    
  </view>
  
  <!-- 底部按钮区域 -->
  <view style="width: 393px; height: 64px; left: 0px; top: 788px; position: fixed; bottom: 0px; background: white; border-top: 1px #F3F4F6 solid">
    <!-- 保存按钮 -->
    <view wx:if="{{workDetail.isNew}}" style="width: 175px; height: 42px; left: 14px; top: 11.50px; position: absolute; background: linear-gradient(135deg, #10B981 0%, #059669 100%); box-shadow: 0px 2px 4px -2px rgba(0, 0, 0, 0.10),0px 4px 6px -1px rgba(0, 0, 0, 0.10); border-radius: 16777200px" bindtap="saveWork">
      <view style="left: 70px; top: 12.75px; position: absolute; display: flex; align-items: center">
        <text style="color: white; font-size: 12.25px; font-weight: 500">保存作品</text>
      </view>
    </view>
    
    <!-- 分享按钮 -->
    <view wx:if="{{!workDetail.isNew}}" style="width: 175px; height: 42px; left: 109px; top: 11.50px; position: absolute; background: linear-gradient(135deg, #FF6B6B 0%, #EE5A6F 100%); box-shadow: 0px 2px 4px -2px rgba(0, 0, 0, 0.10),0px 4px 6px -1px rgba(0, 0, 0, 0.10); border-radius: 16777200px" bindtap="shareWork">
      <view data-svg-wrapper style="left: 70px; top: 14px; position: absolute">
        <image src="/assets/images/9.svg" />
      </view>
      <view style="left: 98px; top: 12.75px; position: absolute; display: flex; align-items: center">
        <text style="color: white; font-size: 12.25px; font-weight: 500">分享作品</text>
      </view>
    </view>
  </view>
  
</view>